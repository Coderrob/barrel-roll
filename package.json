{
  "name": "barrel-roll",
  "displayName": "Barrel Roll",
  "description": "Automatically export types, functions, constants, and classes through barrel files",
  "version": "0.0.1",
  "publisher": "coderrob",
  "author": {
    "name": "Coderrob"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Coderrob/barrel-roll.git"
  },
  "bugs": {
    "url": "https://github.com/Coderrob/barrel-roll/issues"
  },
  "homepage": "https://github.com/Coderrob/barrel-roll#readme",
  "keywords": [
    "barrel",
    "barrel-file",
    "export",
    "typescript",
    "index",
    "module",
    "organization"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "barrel-roll.generateBarrel",
        "title": "Barrel Roll: Generate/Update index.ts"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "barrel-roll.generateBarrel",
          "group": "2_workspace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier": "^3.0.2",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
