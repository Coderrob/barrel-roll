{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "__tests__/**/*", "__mocks__/**/*"],
  "exclude": ["dist", "node_modules", ".vscode-test"]
}
